<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#252B41"
    tools:context=".Ayuda">

    <ImageView
        android:onClick="backHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/titHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREGUNTAS FRECUENTES"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/questRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Como puedo saber mi ranking?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:paddingBottom="30dp"/>

        <TextView
            android:id="@+id/questPrepararse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Como prepararse para el quiz?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:paddingBottom="30dp"/>

        <TextView
            android:id="@+id/questCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Porque crearme un usuario?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:paddingBottom="30dp"/>

        <TextView
            android:id="@+id/questPreguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuantas preguntas tiene el quiz?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:paddingBottom="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/helpMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Tienes mas preguntas?"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="13dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No te lo preguntes dos veces enviamos dudas o preguntas al siguiente correo:"
        android:textColor="#B0BEC5"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnHelpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacto@gmail.com"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6F00"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"/>

</LinearLayout>