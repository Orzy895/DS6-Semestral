<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252B41"
    tools:context=".Glosario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangulo"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/adminBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="backHome"
                    android:paddingLeft="10dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/adminText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/adminBack"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:text="GLOSARIO"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:paddingLeft="70dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="550dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangulo_naranja_boton"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lstGlosario"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@null"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
